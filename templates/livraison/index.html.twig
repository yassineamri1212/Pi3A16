{% extends 'admin/base.html.twig' %}

{% block admin_title %}Manage Deliveries{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Manage Deliveries</h1>
            <a href="{{ path('app_admin_livraison_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Delivery
            </a>
        </div>

        {# Basic search could be added here later if needed #}

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'ID', 'l.id') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Start Location', 'l.startLocation') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Delivery Location', 'l.deliveryLocation') }}</th>
                            <th>Packages</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Delivered?', 'l.isDelivered') }}</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for livraison in pagination %} {# Loop through pagination object #}
                            <tr class="{{ livraison.isDelivered ? 'table-success' : '' }}"> {# Optional: Highlight delivered rows #}
                                <td>{{ livraison.id }}</td>
                                <td>{{ livraison.startLocation|default('N/A') }}</td>
                                <td>{{ livraison.deliveryLocation|default('N/A') }}</td>
                                <td class="text-center">{{ livraison.packages.count }}</td>
                                <td class="text-center">
                                    {% if livraison.isDelivered %}
                                        <i class="fas fa-check-circle text-success" title="Yes"></i>
                                    {% else %}
                                        <i class="fas fa-times-circle text-muted" title="No"></i>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_admin_livraison_show', {'id': livraison.id}) }}" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_livraison_edit', {'id': livraison.id}) }}" class="btn btn-warning btn-sm" title="Edit Delivery">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    {# Include the delete form partial #}
                                    {{ include('livraison/_delete_form.html.twig', { 'livraison': livraison }) }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No deliveries found.</td> {# Adjust colspan #}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div> {# End table-responsive #}
            </div>{# End card-body #}

            {# Display pagination controls #}
            <div class="card-footer bg-white d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}