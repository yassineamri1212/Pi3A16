{# templates/livraison/_delete_form.html.twig #}
{# Expects 'livraison' entity variable #}
{# Optional: 'button_label' (default: 'Delete'), 'button_class' (default: 'btn btn-danger btn-sm') #}
<form method="post" action="{{ path('app_admin_livraison_delete', {'id': livraison.id}) }}" onsubmit="return confirm('Are you sure you want to delete this delivery and ALL its associated packages? This cannot be undone.');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.id) }}">
    <button class="{{ button_class|default('btn btn-danger btn-sm') }}">
        <i class="fas fa-trash-alt"></i> {{ button_label|default('Delete') }}
    </button>
</form>