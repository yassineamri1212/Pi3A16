{% extends 'admin/base.html.twig' %}

{% block admin_title %}Delivery Details{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Delivery Details #{{ livraison.id }}</h1>

        <div class="card shadow mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-white">
                <h5 class="mb-0">Delivery Information</h5>
                <a href="{{ path('app_admin_livraison_index') }}" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to list
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered"> {# Use bordered table for clarity #}
                    <tbody>
                    <tr>
                        <th style="width: 25%;">ID</th>
                        <td>{{ livraison.id }}</td>
                    </tr>
                    <tr>
                        <th>Start Location</th>
                        <td>{{ livraison.startLocation }}</td>
                    </tr>
                    <tr>
                        <th>Delivery Location</th>
                        <td>{{ livraison.deliveryLocation }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            {% if livraison.isDelivered %}
                                <span class="badge bg-success">Delivered</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">Pending</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>

                <hr>

                <div class="d-flex justify-content-start gap-2"> {# Use gap for spacing #}
                    <a href="{{ path('app_admin_livraison_edit', {'id': livraison.id}) }}" class="btn btn-warning">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                    {# Include delete form #}
                    {{ include('livraison/_delete_form.html.twig', { 'livraison': livraison }) }}
                </div>

            </div> {# End card-body #}
        </div> {# End card #}

        {# Packages Section #}
        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">Packages Included ({{ livraison.packages.count }})</h5>
            </div>
            <div class="card-body">
                {% if livraison.packages.empty %}
                    <p class="text-muted">No packages associated with this delivery.</p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Weight (grams)</th>
                                <th>Description</th>
                                <th class="text-end">Actions</th> {# Optional: actions per package #}
                            </tr>
                            </thead>
                            <tbody>
                            {% for package in livraison.packages %}
                                <tr>
                                    <td>{{ package.id }}</td>
                                    <td>{{ package.weightPackage }} g</td>
                                    <td>{{ package.descriptionPackage }}</td>
                                    <td class="text-end">
                                        {# Link to standalone package edit if needed #}
                                        <a href="{{ path('app_package_edit', {'id': package.id}) }}" class="btn btn-outline-secondary btn-sm" title="Edit Package Details">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div> {# End Packages Card #}


    </div> {# End container-fluid #}
{% endblock %}