{% extends 'public/base.html.twig' %}

{% block title %}Home - GoMobility{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <style>
        .hero-section {
            position: relative;
            overflow: hidden;
            min-height: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1;
        }
        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
        }
        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 15px;
            overflow: hidden;
        }
        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2) !important;
        }
        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #0d6efd;
        }
        .transport-type-card {
            height: 100%;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            color: white;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
        }
        .transport-type-card img {
            transition: transform 0.5s ease;
        }
        .transport-type-card:hover img {
            transform: scale(1.1);
        }
        .stats-counter {
            font-size: 2.5rem;
            font-weight: bold;
            color: #0d6efd;
        }
        .testimonial-card {
            border-left: 4px solid #0d6efd;
        }
    </style>
{% endblock %}

