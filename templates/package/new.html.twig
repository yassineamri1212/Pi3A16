{% extends 'admin/base.html.twig' %}

{% block admin_title %}Create Standalone Package{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Create Standalone Package</h1>
        <p class="alert alert-info">Note: Packages should normally be added via the Delivery creation form.</p>

        <div class="card shadow">
            <div class="card-body">
                {# Ensure form theme is loaded #}
                {# {% form_theme form 'bootstrap_5_layout.html.twig' %} #}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }} {# Renders all fields including 'livraison' because standalone=true was passed #}
                <div class="mt-4">
                    <button class="btn btn-success">
                        <i class="fas fa-save"></i> Save Package
                    </button>
                    <a href="{{ path('app_package_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to list
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}