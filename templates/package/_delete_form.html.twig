{# templates/package/_delete_form.html.twig #}
{# Expects 'package' entity variable #}
{# Optional: 'button_label' (default: 'Delete'), 'button_class' (default: 'btn btn-danger btn-sm') #}
<form method="post" action="{{ path('app_package_delete', {'id': package.id}) }}" onsubmit="return confirm('Are you sure you want to delete this package?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ package.id) }}">
    <button class="{{ button_class|default('btn btn-danger btn-sm') }}">
        <i class="fas fa-trash-alt"></i> {{ button_label|default('Delete') }}
    </button>
</form>