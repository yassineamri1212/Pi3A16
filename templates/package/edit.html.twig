{% extends 'admin/base.html.twig' %}

{% block admin_title %}Edit Package{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Edit Package #{{ package.id }}</h1>

        <div class="card shadow">
            <div class="card-body">
                {# Ensure form theme is loaded #}
                {# {% form_theme form 'bootstrap_5_layout.html.twig' %} #}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }} {# Renders all fields including 'livraison' #}
                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Package
                        </button>
                        <a href="{{ path('app_package_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Package list
                        </a>
                        {% if package.livraison %}
                            <a href="{{ path('app_admin_livraison_show', {'id': package.livraison.id }) }}" class="btn btn-outline-info">
                                <i class="fas fa-truck"></i> View Associated Delivery
                            </a>
                        {% endif %}
                    </div>
                    {# Delete form #}
                    {{ include('package/_delete_form.html.twig', { 'package': package, 'button_label': 'Delete', 'button_class': 'btn btn-danger' }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}