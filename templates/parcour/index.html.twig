{% extends 'admin/base.html.twig' %}

{% block admin_title %}Manage Parcours{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Manage Parcours</h1>
            {# Link remains accessible based on controller security #}
            <a href="{{ path('app_admin_parcour_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Parcour
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            {# REMOVED ID Header: <th>{{ knp_pagination_sortable(pagination, 'ID', 'p.idParcours') }}</th> #}
                            <th>{{ knp_pagination_sortable(pagination, 'Trajet (Route)', 'p.trajet') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Distance (km)', 'p.distance') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Est. Time (min)', 'p.estimationTemps') }}</th>
                            <th>Offres Using</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for parcour in pagination %}
                            <tr>
                                {# REMOVED ID Cell: <td>{{ parcour.idParcours }}</td> #}
                                <td>{{ parcour.trajet }}</td>
                                <td>{{ parcour.distance|number_format(1, '.', ',') }} km</td>
                                <td>{{ parcour.estimationTemps }} min</td>
                                <td>{{ parcour.offres.count }}</td>
                                <td class="text-end">
                                    {# Links still use ID internally #}
                                    <a href="{{ path('app_admin_parcour_show', {'idParcours': parcour.idParcours}) }}" class="btn btn-info btn-sm" title="View Details"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('app_admin_parcour_edit', {'idParcours': parcour.idParcours}) }}" class="btn btn-warning btn-sm" title="Edit Parcour"><i class="fas fa-pencil-alt"></i></a>
                                    {{ include('parcour/_delete_form.html.twig', { 'parcour': parcour }) }} {# Ensure this partial exists if you need delete functionality here #}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                {# CORRECTED Colspan (was 6, now 5) #}
                                <td colspan="5" class="text-center">No parcours found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}