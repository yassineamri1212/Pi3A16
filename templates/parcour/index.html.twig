{% extends 'admin/base.html.twig' %}

{% block admin_title %}Manage Parcours{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Manage Parcours</h1>
            <a href="{{ path('app_admin_parcour_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Parcour
            </a>
        </div>

        {# Basic search could be added here if needed later #}
        {#
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_parcour_index') }}">
                    <div class="input-group">
                        <input type="search" name="q" class="form-control" placeholder="Search parcours..." value="{{ app.request.query.get('q') }}">
                        <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
        #}

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            {# Use knp_pagination_sortable for sortable headers #}
                            {# The second argument is the title displayed, third is the sort key (entity property) #}
                            <th>{{ knp_pagination_sortable(pagination, 'ID', 'p.idParcours') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Trajet (Route)', 'p.trajet') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Distance (km)', 'p.distance') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Est. Time (min)', 'p.estimationTemps') }}</th>
                            <th>Offres Using</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for parcour in pagination %} {# Loop through pagination object #}
                            <tr>
                                <td>{{ parcour.idParcours }}</td>
                                <td>{{ parcour.trajet }}</td>
                                <td>{{ parcour.distance|number_format(1, '.', ',') }} km</td> {# Format distance #}
                                <td>{{ parcour.estimationTemps }} min</td>
                                <td>{{ parcour.offres.count }}</td> {# Show how many offres use this #}
                                <td class="text-end">
                                    <a href="{{ path('app_admin_parcour_show', {'idParcours': parcour.idParcours}) }}" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_parcour_edit', {'idParcours': parcour.idParcours}) }}" class="btn btn-warning btn-sm" title="Edit Parcour">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    {# Include the delete form partial #}
                                    {{ include('parcour/_delete_form.html.twig', { 'parcour': parcour }) }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                {# Adjust colspan based on the number of columns #}
                                <td colspan="6" class="text-center">No parcours found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div> {# End table-responsive #}
            </div>{# End card-body #}

            {# Display pagination controls #}
            <div class="card-footer bg-white d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}