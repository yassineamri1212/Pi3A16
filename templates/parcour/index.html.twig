{% extends 'admin/base.html.twig' %}

{% block admin_title %}Manage Parcours{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Manage Parcours</h1>
            <a href="{{ path('app_admin_parcour_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Parcour
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            {# === UPDATED HEADERS === #}
                            {# <th>ID</th> You removed this, keeping it removed #}
                            <th>{{ knp_pagination_sortable(pagination, 'Name', 'p.name') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Pickup', 'p.pickup') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Destination', 'p.destination') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Distance (km)', 'p.distance') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Est. Time (min)', 'p.time') }}</th> {# Changed sort key to p.time #}
                            <th>Offres Using</th>
                            <th class="text-end">Actions</th>
                            {# === END UPDATED HEADERS === #}
                        </tr>
                        </thead>
                        <tbody>
                        {% for parcour in pagination %}
                            <tr>
                                {# === UPDATED CELLS === #}
                                {# <td>ID</td> You removed this #}
                                <td>{{ parcour.name|default('N/A') }}</td> {# Use name, fallback if null #}
                                <td>{{ parcour.pickup }}</td>
                                <td>{{ parcour.destination }}</td>
                                <td>{{ parcour.distance ? (parcour.distance|number_format(1, '.', ',')) ~ ' km' : 'N/A' }}</td> {# Format distance #}
                                <td>{{ parcour.time ? parcour.time ~ ' min' : 'N/A' }}</td> {# Changed from estimationTemps #}
                                <td>{{ parcour.offres.count }}</td>
                                <td class="text-end">
                                    {# Links still use ID internally - No changes needed here #}
                                    <a href="{{ path('app_admin_parcour_show', {'idParcours': parcour.idParcours}) }}" class="btn btn-info btn-sm" title="View Details"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('app_admin_parcour_edit', {'idParcours': parcour.idParcours}) }}" class="btn btn-warning btn-sm" title="Edit Parcour"><i class="fas fa-pencil-alt"></i></a>
                                    {{ include('parcour/_delete_form.html.twig', { 'parcour': parcour }) }}
                                </td>
                                {# === END UPDATED CELLS === #}
                            </tr>
                        {% else %}
                            <tr>
                                {# === UPDATED Colspan (now 7 columns visible) === #}
                                <td colspan="7" class="text-center">No parcours found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div> {# End table-responsive #}
            </div>{# End card-body #}

            <div class="card-footer bg-white d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}