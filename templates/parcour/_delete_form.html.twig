{# templates/parcour/_delete_form.html.twig #}
{# Expects 'parcour' entity variable #}
{# Optional: 'button_label' (default: 'Delete'), 'button_class' (default: 'btn btn-danger btn-sm') #}
<form method="post" action="{{ path('app_admin_parcour_delete', {'idParcours': parcour.idParcours}) }}" onsubmit="return confirm('Are you sure you want to delete this parcour? This cannot be undone.');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parcour.idParcours) }}">
    <button class="{{ button_class|default('btn btn-danger btn-sm') }}">
        <i class="fas fa-trash-alt"></i> {{ button_label|default('Delete') }}
    </button>
</form>