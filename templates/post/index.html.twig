{% extends 'admin/base.html.twig' %}

{% block admin_title %}Manage Forum Posts{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Forum Posts</h1>

        <div class="card shadow">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Post List</h5>
                {# Note: Post creation requires a logged-in user (handled in controller) #}
                <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Create New Post
                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            {# Use knp_pagination_sortable for sortable headers #}
                            <th>{{ knp_pagination_sortable(pagination, 'Title', 'p.title') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Author', 'a.userName') }}</th> {# Sort by author username #}
                            <th>{{ knp_pagination_sortable(pagination, 'Created At', 'p.createdAt') }}</th>
                            <th>Comments</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for post in pagination %} {# Loop through pagination object #}
                            <tr>
                                <td>
                                    <a href="{{ path('app_post_show', {'id': post.id}) }}" title="{{ post.title }}">
                                        {{ post.title|length > 70 ? post.title|slice(0, 70) ~ '...' : post.title }} {# Basic truncate alternative #}
                                    </a>
                                </td>
                                <td>{{ post.author ? post.author.userName : 'N/A' }}</td>
                                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}</td>
                                <td class="text-center">{{ post.commentaires.count }}</td> {# Show comment count #}
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {# Include the delete form partial #}
                                        {{ include('post/_delete_form.html.twig', { 'post': post, 'button_label': '', 'button_class': 'btn btn-danger btn-sm' }) }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">No posts found.</td> {# Adjust colspan #}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div> {# End table-responsive #}
            </div>{# End card-body #}

            {# Display pagination controls #}
            {% if pagination.pageCount > 1 %}
                <div class="card-footer bg-white d-flex justify-content-center">
                    {{ knp_pagination_render(pagination) }}
                </div>
            {% endif %}
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}