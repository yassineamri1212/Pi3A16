{% extends 'admin/base.html.twig' %}

{% block admin_title %}Edit Post{% endblock %}

{% block admin_content %}
    <div class="container-fluid my-4">

        <div class="card shadow rounded-3">
            <div class="card-header bg-warning text-dark"> {# Warning header for edit #}
                <h1 class="h4 mb-0">Edit Post: {{ post.title|length > 50 ? post.title|slice(0, 50) ~ '...' : post.title }}</h1>
            </div>
            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }} {# Render title and content fields #}

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div> {# Group update and back buttons #}
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Update Post
                        </button>
                        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-eye me-1"></i> Back to Post
                        </a>
                    </div>
                    <div> {# Delete button on the right #}
                        {{ include('post/_delete_form.html.twig', { 'post': post, 'button_label': 'Delete Post', 'button_class': 'btn btn-danger' }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div> {# End card-body #}
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}