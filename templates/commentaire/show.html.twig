{% extends 'admin/base.html.twig' %}

{% block admin_title %}Comment Details{% endblock %}

{% block admin_content %}
    <div class="container-fluid my-4">

        <div class="card shadow rounded-3">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0">Comment Details</h1>
                <a href="{{ path('app_commentaire_index') }}" class="btn btn-sm btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to Comment List
                </a>
            </div>
            <div class="card-body p-4">
                <table class="table table-bordered"> {# Use bordered table for details #}
                    <tbody>
                    <tr>
                        <th style="width: 25%;">ID</th>
                        <td>{{ commentaire.id }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ commentaire.content|nl2br }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>{{ commentaire.author ? commentaire.author.userName : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Post</th>
                        <td>
                            {% if commentaire.post %}
                                <a href="{{ path('app_post_show', {'id': commentaire.post.id}) }}">{{ commentaire.post.title }}</a>
                            {% else %}
                                Post not found or deleted
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{{ commentaire.createdAt ? commentaire.createdAt|date('F j, Y H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div> {# End card-body #}
            <div class="card-footer bg-light d-flex justify-content-start gap-2">
                <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit me-1"></i> Edit Comment
                </a>
                {{ include('commentaire/_delete_form.html.twig', { 'commentaire': commentaire, 'button_label': 'Delete Comment', 'button_class': 'btn btn-danger btn-sm' }) }}
                {% if commentaire.post %}
                    <a href="{{ path('app_post_show', {'id': commentaire.post.id}) }}" class="btn btn-info btn-sm">
                        <i class="fas fa-comments me-1"></i> Back to Post
                    </a>
                {% endif %}
            </div>
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}