{% extends 'admin/base.html.twig' %}

{% block admin_title %}Edit Comment{% endblock %}

{% block admin_content %}
    <div class="container-fluid my-4">

        <div class="card shadow rounded-3">
            <div class="card-header bg-warning text-dark">
                <h1 class="h4 mb-0">Edit Comment #{{ commentaire.id }}</h1>
            </div>
            <div class="card-body p-4">
                <blockquote class="blockquote fst-italic text-muted border-start border-3 ps-3 mb-4">
                    "{{ commentaire.content|length > 150 ? commentaire.content|slice(0, 150) ~ '...' : commentaire.content }}"
                    <footer class="blockquote-footer mt-1">{{ commentaire.author ? commentaire.author.userName : 'N/A' }} on <cite title="Source Title">{{ commentaire.post ? commentaire.post.title : 'Deleted Post' }}</cite></footer>
                </blockquote>

                {{ form_start(form) }}
                {{ form_widget(form) }} {# Render content field #}

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Update Comment
                        </button>
                        <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Comment List
                        </a>
                        {% if commentaire.post %}
                            <a href="{{ path('app_post_show', {'id': commentaire.post.id}) }}" class="btn btn-info">
                                <i class="fas fa-comments me-1"></i> Back to Post
                            </a>
                        {% endif %}
                    </div>
                    <div>
                        {{ include('commentaire/_delete_form.html.twig', { 'commentaire': commentaire, 'button_label': 'Delete Comment', 'button_class': 'btn btn-danger' }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div> {# End card-body #}
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}