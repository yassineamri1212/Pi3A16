{% extends 'admin/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block admin_content %}
    <div class="container my-5">
        <h1 class="h3 mb-4">Edit User</h1>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Edit User Information</h5>
            </div>
            <div class="card-body">
                {{ include('user/_form.html.twig', {'button_label': 'Update', 'form_class': 'needs-validation'}) }}
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
