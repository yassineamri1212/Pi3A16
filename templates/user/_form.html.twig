{# templates/admin/user/_form.html.twig (Example path) #}

{# Add novalidate=novalidate is handled by the FormType now #}
{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

    {# Display any non-field specific errors (e.g., CSRF) #}
    {{ form_errors(form) }}

    {# Use form_row for cleaner rendering including labels, widgets, errors, help text #}
    {{ form_row(form.email) }}
    {{ form_row(form.userName) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.roles) }}


<div class="mt-4"> {# Add margin top before button #}
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save me-1"></i> {{ button_label|default('Save User') }}
    </button>
</div>

{{ form_end(form) }} {# This renders remaining fields like _token #}