{% extends 'admin/base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">User Management</h1>
            <a href="{{ path('app_user_new') }}" class="btn btn-success btn-sm">
                <i class="fas fa-plus me-2"></i> Create New User
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Roles</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.userName }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge bg-primary me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                                    {% endfor %}
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <!-- View Button -->
                                        <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                           class="btn btn-info" title="View">
                                            <i class="fas fa-eye me-1"></i> View
                                        </a>

                                        <!-- Edit Button -->
                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                           class="btn btn-warning" title="Edit">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>

                                        <!-- Delete Form -->
                                        <form method="post"
                                              action="{{ path('app_user_delete', {'id': user.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this user?');"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-danger" title="Delete">
                                                <i class="fas fa-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-4">No users found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <style>
        .uniform-actions {
            display: flex;
            gap: 0.3rem;
        }
        .action-btn {
            width: auto; /* Allow buttons to be auto-sized */
            padding: 0.2rem 0.5rem; /* Adjust padding for a more compact button */
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
        }
        .action-btn:hover {
            transform: scale(1.05);
        }
        .action-btn-form {
            margin: 0;
            line-height: 1;
        }
    </style>
{% endblock %}
