{% extends 'admin/base.html.twig' %}

{% block admin_title %}Edit Offre{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Edit Offre #{{ offre.idOffre }}</h1>

        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form) }}

                {# Display current photo if exists #}
                {% if offre.photo %}
                    <div class="mb-3">
                        <label class="form-label">Current Photo:</label><br>
                        <img src="{{ vich_uploader_asset(offre, 'photoFile') | imagine_filter('admin_thumb') }}"
                             alt="Current Photo" style="max-height: 100px; max-width: 150px;">
                        {# Fallback:
                  <img src="{{ vich_uploader_asset(offre, 'photoFile') }}" alt="Current Photo" height="100">
                        #}
                    </div>
                {% endif %}

                {# Render form fields #}
                {{ form_widget(form) }}

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-primary">
                            <i class="fas fa-save"></i> {{ button_label|default('Update Offre') }}
                        </button>
                        <a href="{{ path('app_offre_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to list
                        </a>
                    </div>
                    {# Place delete form here on edit page #}
                    {{ include('offre/_delete_form.html.twig', { 'offre': offre, 'button_label': 'Delete', 'button_class': 'btn btn-danger' }) }}
                </div>

                {{ form_end(form) }}
            </div> {# End card-body #}
        </div> {# End card #}

    </div> {# End container-fluid #}
{% endblock %}