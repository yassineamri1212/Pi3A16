{# templates/offre/_delete_form.html.twig #}
{# Expects 'offre' entity variable #}
{# Optional: 'button_label' (default: 'Delete'), 'button_class' (default: 'btn btn-danger btn-sm') #}
<form method="post" action="{{ path('app_offre_delete', {'idOffre': offre.idOffre}) }}" onsubmit="return confirm('Are you sure you want to delete this offre? This cannot be undone.');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.idOffre) }}">
    <button class="{{ button_class|default('btn btn-danger btn-sm') }}">
        <i class="fas fa-trash-alt"></i> {{ button_label|default('Delete') }}
    </button>
</form>