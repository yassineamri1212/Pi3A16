{% extends 'admin/base.html.twig' %}

{% block admin_title %}View All Offres{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">View All Offres</h1>
            {# No Create button for admin view #}
        </div>

        {# Search Form (unchanged - search term 'q' can search the new fields via Repository method) #}
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_offre_index') }}">
                    {% if pagination.params.sort is defined %}<input type="hidden" name="sort" value="{{ pagination.params.sort }}">{% endif %}
                    {% if pagination.params.direction is defined %}<input type="hidden" name="direction" value="{{ pagination.params.direction }}">{% endif %}
                    <div class="input-group">
                        <input type="search" name="q" class="form-control" placeholder="Search by driver, parcour name, fuel, price..." value="{{ searchTerm }}">
                        <button class="btn btn-outline-secondary" type="submit" title="Search"><i class="fas fa-search"></i></button>
                        {% if searchTerm %}<a href="{{ path('app_offre_index', { sort: pagination.params.sort|default(null), direction: pagination.params.direction|default(null) }) }}" class="btn btn-outline-danger" title="Clear Search"><i class="fas fa-times"></i></a>{% endif %}
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            {# REMOVED ID Header #}
                            <th>Photo</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Driver', 'c.userName') }}</th> {# Assuming 'c' is alias for conducteur if joined #}
                            {# === UPDATED Parcour Header === #}
                            <th>{{ knp_pagination_sortable(pagination, 'Parcour', 'p.name') }}</th> {# Sort by name, pickup, or destination #}
                            {# === END Parcour Header === #}
                            <th>{{ knp_pagination_sortable(pagination, 'Departure', 'o.dateDepart') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Price', 'o.prix') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Seats', 'o.nombrePlaces') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Fuel', 'o.typeFuel') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'A/C', 'o.climatisee') }}</th>
                            <th class="text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for offre in pagination %}
                            <tr>
                                {# REMOVED ID Cell #}
                                <td> {% if offre.photo %}<img src="{{ vich_uploader_asset(offre, 'photoFile') | imagine_filter('admin_thumb') }}" alt="Photo for Offre #{{ offre.idOffre }}" style="max-height: 40px; max-width: 60px; object-fit: cover;" loading="lazy">{% else %}<span class="text-muted small">No photo</span>{% endif %}</td>
                                <td>{{ offre.conducteur ? offre.conducteur.userName : 'N/A' }}</td> {# Keep driver if you have it #}
                                {# === UPDATED Parcour Cell === #}
                                <td>
                                    {% set parcour_display = offre.parcour.name|default(offre.parcour.pickup ~ ' to ' ~ offre.parcour.destination) %}
                                    <a href="{{ path('app_admin_parcour_show', {'idParcours': offre.parcour.idParcours}) }}" title="{{ parcour_display }}">
                                        {{ parcour_display|length > 35 ? parcour_display|slice(0, 35) ~ '...' : parcour_display }} {# Use slice instead of truncate #}
                                    </a>
                                </td>
                                {# === END Parcour Cell === #}
                                <td>{{ offre.dateDepart ? offre.dateDepart|date('Y-m-d H:i') : 'N/A' }}</td>
                                <td>{{ offre.prix|number_format(2, '.', ',') }} TND</td>
                                <td class="text-center">{{ offre.nombrePlaces }}</td>
                                <td>{{ offre.typeFuel|capitalize }}</td>
                                <td class="text-center"> {% if offre.climatisee %}<i class="fas fa-check text-success" title="Yes"></i>{% else %}<i class="fas fa-times text-danger" title="No"></i>{% endif %}</td>
                                <td class="text-end">
                                    {# Link uses ID internally #}
                                    <a href="{{ path('app_offre_show', {'idOffre': offre.idOffre}) }}" class="btn btn-info btn-sm" title="View Details"><i class="fas fa-eye"></i></a>
                                    {# You might want edit/delete here too for Admin #}
                                    {# <a href="{{ path('app_offre_edit', {'idOffre': offre.idOffre}) }}" class="btn btn-warning btn-sm" title="Edit Offre"><i class="fas fa-pencil-alt"></i></a> #}
                                    {# {{ include('offre/_delete_form.html.twig', { 'offre': offre }) }} #}
                                </td>
                            </tr>
                        {% else %}
                            {# Colspan remains 9 #}
                            <tr><td colspan="9" class="text-center">No offres found.</td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white d-flex justify-content-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}