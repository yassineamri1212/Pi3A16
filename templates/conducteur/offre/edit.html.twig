{% extends 'conducteur/base.html.twig' %} {# Correct base #}
{% block conducteur_title %}Edit My Offre{% endblock %} {# Correct block #}

{% block conducteur_content %} {# Correct block #}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Edit My Offre #{{ offre.idOffre }}</h1>
        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {% if offre.photo %}<div class="mb-3"><label class="form-label">Current Photo:</label><br><img src="{{ vich_uploader_asset(offre, 'photoFile') | imagine_filter('admin_thumb') }}" alt="Current Photo" style="max-height: 100px; max-width: 150px;"></div>{% endif %}
                {{ form_widget(form) }}
                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-primary"><i class="fas fa-save"></i> Update Offre</button>
                        {# Link back to CONDUCTEUR index #}
                        <a href="{{ path('app_conducteur_offre_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to My Offres</a>
                    </div>
                    {# Ensure delete form partial exists in conducteur/offre/_delete_form.html.twig #}
                    {{ include('conducteur/offre/_delete_form.html.twig', { 'offre': offre, 'button_label': 'Delete', 'button_class': 'btn btn-danger' }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}