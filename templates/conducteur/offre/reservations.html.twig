{% extends 'conducteur/base.html.twig' %}

{% block conducteur_title %}Reservations for Offre #{{ offre.idOffre }}{% endblock %}

{% block conducteur_content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Reservations for Offre #{{ offre.idOffre }}</h1>
            <a href="{{ path('app_conducteur_offre_show', {'idOffre': offre.idOffre}) }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to Offre Details
            </a>
        </div>

        <div class="alert alert-secondary">
            {# === UPDATED Parcour Display === #}
            <strong>Route:</strong> {{ offre.parcour.name|default(offre.parcour.pickup ~ ' to ' ~ offre.parcour.destination) }} <br>
            <strong>Departure:</strong> {{ offre.dateDepart|date('Y-m-d H:i') }}
        </div>

        <div class="card shadow">
            <div class="card-header">
                Passenger List ({{ reservations|length }} reserved / {{ offre.nombrePlaces }} total seats)
            </div>
            <div class="card-body">
                {% if reservations is not empty %}
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                            <tr>
                                <th>Passenger Username</th>
                                <th>Passenger Email</th>
                                <th>Reserved At</th>
                                <th>Status</th>
                                {# <th>Actions</th> #}
                            </tr>
                            </thead>
                            <tbody>
                            {% for reservation in reservations %}
                                <tr>
                                    <td>{{ reservation.passenger.userName }}</td>
                                    <td>{{ reservation.passenger.email }}</td>
                                    <td>{{ reservation.createdAt|date('Y-m-d H:i') }}</td>
                                    <td>
                                         <span class="badge bg-{% if reservation.status == 'confirmed' %}success{% elseif reservation.status starts with 'cancelled' %}danger{% else %}secondary{% endif %}">
                                             {{ reservation.status|replace({'_': ' '})|capitalize }}
                                         </span>
                                    </td>
                                    {#<td></td>#}
                                </tr>
                            {% else %}
                                {# Should not be reached #}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-center text-muted my-4">No reservations have been made for this offer yet.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}