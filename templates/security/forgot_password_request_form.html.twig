{# templates/security/forgot_password_request_form.html.twig #}
{% extends 'base.html.twig' %} {# Or your main frontend base template #}

{% block title %}Forgot Password{% endblock %}

{% block body %}
    <div class="container mt-5">
    <div class="row justify-content-center">
    <div class="col-md-6">
    <div class="card shadow">
    <div class="card-body">
    <h1 class="card-title text-center mb-4">Forgot Your Password?</h1>

    {# Display potential flash messages from controller if redirect happens #}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <p class="text-center text-muted mb-4">
        Enter the email address associated with your account, and we'll send you a link to reset your password.
    </p>

    {# Render the Symfony form generated in the controller #}
    {{ form_start(requestForm) }}
    {# Use form_row to include label, input, and errors #}
    {{ form_row(requestForm.email, {
        label: 'Email Address',
        attr: { placeholder: 'you@example.com' }
    }) }}

    <div class="d-grid mt-3">
        <button type="submit" class="btn btn-primary">Send password reset email</button>
    </div>
    {{ form_end(requestForm) }}

    <div class="text-center mt-3">
        <a href="{{ path('app_login') }}">Back to Login</a>
    </div>

    </div>{# End Card Body #}
    </div>{# End Card #}
    </div>{# End Col #}
    </div>{# End Row #}
    </div>{# End Container #}
{% endblock %}

{# JavaScript block is no longer needed for this form #}
{% block javascripts %}
    {{ parent() }}
{% endblock %}