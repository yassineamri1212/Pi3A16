{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <style>
        .admin-layout {
            display: flex;
            height: 100vh;
        }

        .admin-sidebar {
            width: 250px;
            position: fixed;
            height: 100%;
            overflow-y: auto;
        }

        .admin-content {
            flex-grow: 1;
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-layout">
        {% include 'admin/_sidebar.html.twig' %}
        <main class="admin-content">
            {% block admin_content %}{% endblock %}
        </main>
    </div>
{% endblock %}
