{% extends 'admin/base.html.twig' %}

{% block title %}Transport Management{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Transport Management</h1>

        <div class="card shadow">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Transport List</h5>
                <a href="{{ path('admin_moyen_de_transport_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Create New
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Price</th>
                            {# ---> ADDED HEADER <--- #}
                            <th>Departure Point</th>
                            {# ---> END ADDED HEADER <--- #}
                            <th>Seats</th>
                            <th>Associated Event</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {# NOTE: The loop variable comes from your controller, assuming 'moyen_de_transports' #}
                        {% for transport in moyen_de_transports %}
                            <tr>
                                <td>{{ transport.id }}</td>
                                <td>{{ transport.type }}</td>
                                <td>{{ transport.prix }} TND</td>
                                {# ---> ADDED CELL <--- #}
                                {# Use text-truncate helper and set max-width via style or CSS class #}
                                <td class="text-truncate" style="max-width: 250px;" title="{{ transport.pointDepart }}">
                                    {{ transport.pointDepart }}
                                </td>
                                {# ---> END ADDED CELL <--- #}
                                <td>{{ transport.nbrePlaces }}</td>
                                <td>
                                    {% if transport.evenement %}
                                        {# Corrected link path if it was wrong before #}
                                        <a href="{{ path('admin_evenement_show', {'id': transport.evenement.id}) }}" class="text-decoration-none">
                                            {{ transport.evenement.nom }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted fst-italic">Not assigned</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_moyen_de_transport_show', {'id': transport.id}) }}"
                                           class="btn btn-info btn-sm" title="View">
                                            <i class="fas fa-eye"></i> {# Icon only for space #}
                                        </a>
                                        <a href="{{ path('admin_moyen_de_transport_edit', {'id': transport.id}) }}"
                                           class="btn btn-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i> {# Icon only #}
                                        </a>
                                        {# Kept your delete form structure #}
                                        <form method="post" action="{{ path('admin_moyen_de_transport_delete', {'id': transport.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this transport?');"
                                              class="d-inline">
                                            <input type="hidden" name="_method" value="DELETE"> {# Check if your route needs DELETE or just POST #}
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transport.id) }}">
                                            <button class="btn btn-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i> {# Icon only #}
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                {# ---> ADJUSTED COLSPAN (increased by 1) <--- #}
                                <td colspan="7" class="text-center py-4">No transports found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {# Add pagination controls here if you implement KnpPaginatorBundle for this controller #}
                {# Example:
                 {% if moyen_de_transports is defined and moyen_de_transports is not empty and moyen_de_transports is iterable %}
                     <div class="navigation d-flex justify-content-center mt-3">
                         {{ knp_pagination_render(moyen_de_transports) }}
                     </div>
                 {% endif %}
                #}
            </div>
        </div>
    </div>
{% endblock %}