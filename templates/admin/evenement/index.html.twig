{% extends 'admin/base.html.twig' %}

{% block title %}Event Management{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Event Management</h1>

        <div class="card shadow">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Event List</h5>
                <a href="{{ path('admin_evenement_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Create New
                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <!-- Added 'table-hover' class -->
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for evenement in evenements %}
                            <tr>
                                <td>{{ evenement.nom }}</td>
                                <td>{{ evenement.dateEvenement|date('Y-m-d') }}</td>
                                <td>{{ evenement.lieu }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <!-- View Button -->
                                        <a href="{{ path('admin_evenement_show', {'id': evenement.id}) }}"
                                           class="btn btn-info" title="View">
                                            <i class="fas fa-eye me-1"></i> View
                                        </a>

                                        <!-- Edit Button -->
                                        <a href="{{ path('admin_evenement_edit', {'id': evenement.id}) }}"
                                           class="btn btn-warning" title="Edit">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>

                                        <!-- Delete Form -->
                                        <form method="post"
                                              action="{{ path('admin_evenement_delete', {'id': evenement.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this event?');"
                                              class="d-inline">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                                            <button class="btn btn-danger">
                                                <i class="fas fa-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-4">No events found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
