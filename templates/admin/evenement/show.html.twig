{% extends 'admin/base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block admin_content %}
  <div class="container-fluid">
    <div class="card shadow rounded-3">
      <div class="card-header bg-white border-bottom">
        <h1 class="h3 mb-0 fw-bold text-primary">Event Details</h1>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6">
            <dl class="row">
              <dt class="col-sm-4 text-muted">Name:</dt>
              <dd class="col-sm-8">{{ evenement.nom }}</dd>

              <dt class="col-sm-4 text-muted">Description:</dt>
              <dd class="col-sm-8">{{ evenement.description }}</dd>
            </dl>
          </div>
          <div class="col-md-6">
            <dl class="row">
              <dt class="col-sm-4 text-muted">Location:</dt>
              <dd class="col-sm-8">{{ evenement.lieu }}</dd>

              <dt class="col-sm-4 text-muted">Date:</dt>
              <dd class="col-sm-8">{{ evenement.dateEvenement|date('Y-m-d H:i') }}</dd>
            </dl>
          </div>
        </div>

        {% if evenement.imageEvenement %}
          <div class="mb-4 text-center">
            <h5 class="mb-3 text-secondary">Event Image</h5>
            <img src="{{ asset('uploads/images/' ~ evenement.imageEvenement) }}"
                 class="img-fluid rounded shadow-sm"
                 style="max-height: 300px;"
                 alt="Event image">
          </div>
        {% endif %}

        <div class="mt-5">
          <h4 class="mb-4 pb-2 border-bottom text-secondary">Users Reserved Trips To This Event</h4>
          {% if users is not empty %}
            <div class="row">
              {% for user in users %}
                <div class="col-md-4 mb-3">
                  <div class="card h-100 shadow-sm border-0 rounded-3">
                    <div class="card-body">
                      <h5 class="card-title text-primary mb-1">
                        {% if user.userName is defined and user.userName %}
                          {{ user.userName }}
                        {% else %}
                          {{ user.email }}
                        {% endif %}
                      </h5>
                      <p class="card-text text-muted mb-2">{{ user.email }}</p>
                      <div>
                        <strong class="text-muted small">Reserved Transports:</strong>
                        <ul class="list-unstyled small mt-1 mb-0">
                          {% for transport in user.reservedTransports %}
                            {% if transport.evenement.id == evenement.id %}
                              <li class="mb-1">
                                {{ transport.type }} &ndash; {{ transport.prix }} TND &ndash; Seats Left:
                                {{ transport.nbrePlaces }}
                              </li>
                            {% endif %}
                          {% endfor %}
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% else %}
            <div class="alert alert-light mt-4 border" role="alert">
              No users have reserved a trip for this event.
            </div>
          {% endif %}
        </div>

        <div class="mt-5">
          <h4 class="mb-4 pb-2 border-bottom text-secondary">Transports Statistics</h4>
          <div style="height: 300px;"> <!-- Set a fixed height to contain the chart -->
            <canvas id="transportChart" style="height: 100%;"></canvas> <!-- 100% of the div's height -->
          </div>
        </div>
      </div>
      <div class="card-footer bg-white d-flex justify-content-between border-top">
        <a href="{{ path('admin_evenement_index') }}" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-1"></i> Back to list
        </a>
        <div class="btn-group">
          <a href="{{ path('admin_evenement_edit', {'id': evenement.id}) }}" class="btn btn-outline-warning">
            <i class="fas fa-edit me-1"></i> Edit
          </a>
          <form method="post" action="{{ path('admin_evenement_delete', {'id': evenement.id}) }}"
                onsubmit="return confirm('Are you sure you want to delete this event?');"
                class="d-inline">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
            <button class="btn btn-outline-danger">
              <i class="fas fa-trash me-1"></i> Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  {% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      const ctx = document.getElementById('transportChart').getContext('2d');
      const labels = [
        {% for stat in transportStats %}
        '{{ stat.type }}',  <!-- Keep transport type as before -->
        {% endfor %}
      ];
      const data = {
        labels: labels,
        datasets: [{
          label: 'Reserved Users',
          data: [
            {% for stat in transportStats %}
            {{ stat.userCount }},
            {% endfor %}
          ],
          backgroundColor: 'rgba(54, 162, 235, 0.5)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      };
      const config = {
        type: 'bar',
        data: data,
        options: {
          responsive: true,  // Makes the chart responsive
          maintainAspectRatio: false,  // Prevents stretching
          scales: {
            y: {
              beginAtZero: true,
              precision: 0,
            }
          },
          plugins: {
            legend: {
              display: false
            }
          }
        },
      };
      new Chart(ctx, config);
    </script>
  {% endblock %}
{% endblock %}
