{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group mb-3">
            {{ form_label(form.date_evenement) }}
            {{ form_widget(form.date_evenement, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="form-group mb-3">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
</div>

<div class="form-group mb-3">
    {{ form_label(form.lieu) }}
    {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group mb-4">
    {{ form_label(form.imageFile) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
    <small class="form-text text-muted">Upload an image for your event</small>
</div>

<button class="btn btn-primary">
    <i class="fas fa-save me-1"></i> {{ button_label|default('Save') }}
</button>
{{ form_end(form) }}