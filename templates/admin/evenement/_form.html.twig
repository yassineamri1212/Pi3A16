{# templates/admin/evenement/_form.html.twig #}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

{% if form_errors(form) %}
    <div class="alert alert-danger mb-4">
        {{ form_errors(form) }}
    </div>
{% endif %}

{# --- Event Details Section --- #}
<fieldset class="mb-4">
    <legend class="h5 mb-3 fw-normal border-bottom pb-2">Event Details</legend>
    <div class="row g-3">
        <div class="col-md-12">
            {{ form_row(form.nom, {
                'label': 'Event Name *',
                'label_attr': {'class': 'form-label'},
                'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': 'Enter the name of the event'
                }
            }) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.lieu, 'Location (Optional)') }}
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-map-marker-alt text-secondary"></i></span>
                {{ form_widget(form.lieu, {
                    'required': false,
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'e.g., City Conference Center'
                    }
                }) }}
            </div>
            {{ form_errors(form.lieu) }}
            {{ form_help(form.lieu) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.date_evenement, 'Date and Time *') }}
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-calendar-alt text-secondary"></i></span>
                {{ form_widget(form.date_evenement, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            {{ form_errors(form.date_evenement) }}
            {{ form_help(form.date_evenement) }}
        </div>

        <div class="col-12">
            {{ form_row(form.description, {
                'label': 'Description *',
                'label_attr': {'class': 'form-label'},
                'attr': {
                    'class': 'form-control',
                    'rows': 5,
                    'placeholder': 'Provide details about the event...'
                }
            }) }}
        </div>
    </div>
</fieldset>

{# --- Image Section --- #}
<fieldset class="mb-4">
    <legend class="h5 mb-3 fw-normal border-bottom pb-2">Event Image</legend>
    <div class="row g-3">
        <div class="col-md-7">
            {{ form_row(form.imageFile, {
                'label': 'Upload New Image (Optional)',
                'label_attr': {'class': 'form-label'},
                'help': 'Max 2MB (JPG/PNG). Leave empty to keep current image (if editing).',
                'required': false
            }) }}
        </div>

        {% if form.vars.data is defined and form.vars.data and form.vars.data.id is not null and form.vars.data.imageEvenement %}
            <div class="col-md-5 align-self-center">
                <div class="text-center text-md-start">
                    <label class="form-label d-block mb-2">Current Image:</label>
                    <img src="{{ vich_uploader_asset(form.vars.data, 'imageFile') }}"
                         alt="{{ form.vars.data.nom|default('Current image') }}"
                         class="img-thumbnail mb-2"
                         style="max-height: 120px; max-width: 100%; object-fit: cover;">
                </div>
            </div>
        {% endif %}
    </div>
</fieldset>

{# --- Form Actions --- #}
<div class="col-12 text-end mt-3">
    <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-save me-1"></i> {{ button_label|default('Save Event') }}
    </button>
</div>

{{ form_end(form) }}
