File: templates/admin/event_stats.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %} Event Statistics {% endblock %}

{% block admin_content %}
<div class="container-fluid">
  <h1 class="h3 mb-4">Event Statistics</h1>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Event Name</th>
        <th>Number of Bookings</th>
      </tr>
    </thead>
    <tbody>
      {% for stat in stats %}
      <tr>
        <td>{{ stat.nom }}</td>
        <td>{{ stat.bookings }}</td>
      </tr>
      {% else %}
      <tr>
        <td colspan="2" class="text-center py-4">No statistics available.</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}