{% if evenement %}
    <form method="post" action="{{ path('admin_evenement_delete', {'id': evenement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this event?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endif %}