{% extends 'public/base.html.twig' %}

{% block public_title %}Forum - Discussions{% endblock %}

{% block public_content %}
    <div class="container my-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2">Forum Discussions</h1>
            {# Show 'Create Post' button only if user is logged in #}
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_forum_post_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Start New Discussion
                </a>
            {% endif %}
        </div>

        {# Optional Search/Filter Bar - Add later if needed #}

        {# Post Listing #}
        <div class="list-group shadow-sm">
            {% for post in pagination %}
                <div class="list-group-item list-group-item-action flex-column align-items-start py-3 px-4">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1 h6 fw-bold">
                            <a href="{{ path('app_forum_post_show', {'id': post.id}) }}" class="text-decoration-none stretched-link">
                                {{ post.title }}
                            </a>
                        </h5>
                        <small class="text-muted" title="{{ post.createdAt|date('F j, Y H:i:s') }}">
                            {{ post.createdAt|date('M j, Y') }} {# Shorter date format #}
                        </small>
                    </div>
                    <p class="mb-1 text-muted small">
                        By: {{ post.author ? post.author.userName : 'N/A' }}
                        <span class="ms-2 me-2">|</span>
                        <i class="fas fa-comments fa-xs me-1"></i> {{ post.commentaires.count }}
                    </p>
                    {# Optional: Show excerpt if needed, but can clutter list #}
                    {# <p class="mb-1 small">{{ post.content|slice(0, 150) ~ '...' }}</p> #}
                </div>
            {% else %}
                <div class="list-group-item text-center p-5">
                    <p class="lead text-muted">No discussions started yet.</p>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_forum_post_new') }}" class="btn btn-primary btn-sm">Be the first!</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm">Login to start a discussion</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div> {# End list-group #}

        {# Pagination #}
        {% if pagination.pageCount > 1 %}
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}

    </div> {# End container #}
{% endblock %}