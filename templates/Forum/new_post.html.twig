{% extends 'public/base.html.twig' %}

{% block public_title %}Start New Discussion{% endblock %}

{% block public_content %}
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-lg-8"> {# Limit width for readability #}

                <h1 class="h2 mb-4 text-center">Start a New Discussion</h1>

                <div class="card shadow-sm border-0"> {# Less prominent card #}
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_widget(form) }} {# Renders title and content #}

                        <div class="mt-4 text-end"> {# Buttons on the right #}
                            <a href="{{ path('app_forum_index') }}" class="btn btn-outline-secondary me-2">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i> Post Discussion
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div> {# End card-body #}
                </div> {# End card #}

            </div> {# End col #}
        </div> {# End row #}
    </div> {# End container #}
{% endblock %}