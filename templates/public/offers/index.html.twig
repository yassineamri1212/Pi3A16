
{# templates/public/offers/index.html.twig #}
{% extends 'public/base.html.twig' %} {# Extends your public base layout #}

{% block public_title %}Find a Ride - Carpool Offers{% endblock %}

{% block public_content %}
    <div class="container my-5">
        {# Page Title - Adapt style from events page #}
        <h2 class="mb-4 text-center fw-bold text-body-secondary" style="position: relative;">
            <span style="position: relative; z-index: 1; padding: 0 15px; background: var(--bs-body-bg);">Available Carpool Offers</span>
            <span style="position: absolute; top: 50%; left: 0; right: 0; height: 2px; background: linear-gradient(90deg, transparent, var(--bs-success), transparent); z-index: 0;"></span> {# Use success color? #}
        </h2>

        {# Search and Filter Bar - Adapt from events page #}
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_public_offers_index') }}">
                    {# Keep existing sort/page parameters when searching #}
                    {% if sort is defined %}<input type="hidden" name="sort" value="{{ sort }}">{% endif %}
                    {% if direction is defined %}<input type="hidden" name="direction" value="{{ direction }}">{% endif %}

                    <div class="row g-3 align-items-end"> {# Use align-items-end for button alignment #}
                        <div class="col-md-8">
                            <label for="offer-search" class="form-label fw-semibold">Search Offers</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" id="offer-search" name="q" value="{{ searchTerm|default('') }}"
                                       placeholder="Search by route, fuel type..."
                                       class="form-control">
                            </div>
                        </div>
                        {# Add more filters later (e.g., date, start/end location) #}
                        {#
                        <div class="col-md-4">
                           <label for="offer-date" class="form-label fw-semibold">Date</label>
                           <input type="date" id="offer-date" name="date" class="form-control">
                        </div>
                        #}
                        <div class="col-md-4">
                            {# The label is visually hidden but good for accessibility #}
                            <label for="submit-search" class="visually-hidden">Apply Search</label>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end"> {# Buttons alignment #}
                                <button type="submit" id="submit-search" class="btn btn-primary">
                                    <i class="fas fa-filter me-1"></i> Search Rides
                                </button>
                                {# Add reset link if filters applied #}
                                {% if searchTerm %}
                                    <a href="{{ path('app_public_offers_index') }}" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i> Reset
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div> {# End search card #}

        {# Sorting Links (Optional) #}
        {# You can add links similar to knp_pagination_sortable if needed #}
        {# <div class="text-end mb-2">
            Sort by:
            <a href="{{ path('app_public_offers_index', app.request.query.all|merge({sort: 'o.dateDepart', direction: direction == 'ASC' ? 'DESC' : 'ASC'})) }}">Date</a> |
            <a href="{{ path('app_public_offers_index', app.request.query.all|merge({sort: 'o.prix', direction: direction == 'ASC' ? 'DESC' : 'ASC'})) }}">Price</a>
         </div> #}


        {# Offers Grid #}
        <div class="row g-4">
            {% for offre in pagination %}
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch"> {# Use d-flex for equal height cards #}
                    {# --- Reusable Card Structure (Copy/Adapt from homepage added section) --- #}
                    <div class="card w-100 border-0 shadow-sm rounded-3 overflow-hidden h-100 offer-card"> {# Added offer-card class #}
                        {% if offre.photo %}
                            <div class="card-img-top-wrapper overflow-hidden" style="height: 200px;">
                                {# Make sure 'offer_list_thumb' filter exists in liip_imagine.yaml #}
                                {# Define it like admin_thumb but maybe larger #}
                                <img src="{{ vich_uploader_asset(offre, 'photoFile') | imagine_filter('offer_list_thumb') }}"
                                     class="img-fluid w-100 h-100 object-fit-cover offer-card-img" {# Added class #}
                                     alt="Photo for {{ offre.parcour.trajet }}">
                                {# Fallback if no LiipImagine: #}
                                {# <img src="{{ vich_uploader_asset(offre, 'photoFile') }}"
                                     class="img-fluid w-100 h-100 object-fit-cover offer-card-img"
                                     alt="Photo for {{ offre.parcour.trajet }}"> #}
                            </div>
                        {% else %}
                            <div class="card-img-top-wrapper d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                {# Placeholder icon #}
                                <i class="fas fa-car-side text-body-tertiary" style="font-size: 3rem;"></i>
                            </div>
                        {% endif %}
                        <div class="card-body d-flex flex-column"> {# Use flex column for layout #}
                            <h5 class="card-title fw-bold text-primary mb-2">{{ offre.parcour.trajet }}</h5>

                            <div class="mb-3 fs-sm text-body-secondary d-flex flex-column gap-1"> {# Column layout for details #}
                                <div title="Departure">
                                    <i class="fas fa-calendar-alt text-info me-1 fa-fw"></i>
                                    {# Format date for better readability #}
                                    {{ offre.dateDepart|date('D, M j, Y \\a\\t H:i') }}
                                </div>
                                <div title="Estimated Duration">
                                    <i class="fas fa-clock text-secondary me-1 fa-fw"></i>
                                    ~{{ offre.parcour.estimationTemps }} min drive
                                </div>
                                <div title="Distance">
                                    <i class="fas fa-road text-secondary me-1 fa-fw"></i>
                                    {{ offre.parcour.distance|number_format(1, '.', ',') }} km
                                </div>
                                <div title="Price per Seat">
                                    <i class="fas fa-dollar-sign text-success me-1 fa-fw"></i>
                                    {{ offre.prix|number_format(2, '.', ',') }} TND / seat
                                </div>
                                <div title="Available Seats">
                                    <i class="fas fa-users text-warning me-1 fa-fw"></i>
                                    {{ offre.nombrePlaces }} Seat(s) available
                                </div>
                                <div title="Fuel Type">
                                    <i class="fas fa-gas-pump text-muted me-1 fa-fw"></i>
                                    {{ offre.typeFuel|capitalize }}
                                </div>
                                <div title="Air Conditioned">
                                    {% if offre.climatisee %}
                                        <i class="fas fa-wind text-info me-1 fa-fw"></i> Air Conditioned
                                    {% else %}
                                        <i class="fas fa-wind text-muted me-1 fa-fw" style="opacity: 0.5;"></i> <span class="text-muted">No A/C</span>
                                    {% endif %}
                                </div>
                            </div>

                            {# Pushes button to bottom #}
                            <div class="mt-auto pt-2">
                                {# --- BUTTON: Link to a future details page or booking action --- #}
                                {# For now, just links back to index #}
                                <a href="{{ path('app_public_offers_index') }}"
                                   class="btn btn-primary w-100 rounded-pill">
                                    <i class="fas fa-info-circle me-1"></i> View Details / Book
                                </a>
                                {# Example: Login required to book #}
                                {# {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <a href="#" class="btn btn-success w-100 rounded-pill">Book Now</a>
                                {% else %}
                                     <a href="{{ path('app_login', {'redirect_to': app.request.uri}) }}" class="btn btn-secondary w-100 rounded-pill">Login to Book</a>
                                {% endif %} #}
                                {# --- END BUTTON --- #}
                            </div>
                        </div> {# End card-body #}
                    </div> {# End card #}
                </div> {# End col #}
            {% else %}
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-search text-body-tertiary mb-3" style="font-size: 2.5rem;"></i>
                            <h5 class="text-body-secondary">No carpool offers found</h5>
                            <p class="text-body-secondary mb-0">There are currently no offers matching your criteria, or maybe create one yourself!</p>
                            {# Optional: Link to offer creation page if public creation allowed #}
                            {# <a href="#" class="btn btn-success mt-3">Offer a Ride</a> #}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div> {# End row #}

        {# Pagination #}
        <div class="mt-4 d-flex justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    </div> {# End container #}
{% endblock %} {# End public_content #}

