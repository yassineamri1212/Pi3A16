{% extends 'public/base.html.twig' %} {# Use your PUBLIC base layout #}

{# === UPDATED BLOCK public_title === #}
{% block public_title %}{{ offre.parcour.pickup }} to {{ offre.parcour.destination }} - Carpool Offer{% endblock %}

{% block public_content %}
    <div class="container my-5">
    <div class="row g-5">
    {# Main Offer Details Column #}
    <div class="col-lg-8">
    {# === UPDATED Title and Basic Info === #}
    <h1 class="h2 mb-1 fw-bold">{{ offre.parcour.pickup }}</h1>
    <div class="fs-4 mb-3 text-muted"><i class="fas fa-long-arrow-alt-down mx-2"></i></div>
    <h1 class="h2 mb-3 fw-bold">{{ offre.parcour.destination }}</h1>
    {% if offre.parcour.name %}
        <p class="text-muted fst-italic mb-3">({{ offre.parcour.name }})</p>
    {% endif %}
    <div class="d-flex align-items-center text-muted mb-4">
        <i class="fas fa-user-circle me-2 fs-5"></i>
        <span>Offered by <strong>{{ offre.conducteur.userName }}</strong></span>
        {# Optional: Add link to driver profile if you have one #}
    </div>

    {# Departure and Time #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-auto text-center text-primary">
                    <i class="fas fa-calendar-alt fa-2x"></i>
                </div>
                <div class="col">
                    <h5 class="mb-1">Departure</h5>
                    <p class="mb-0 fw-semibold fs-5">{{ offre.dateDepart|date('l, F j, Y') }}</p>
                    {# === UPDATED TIME DISPLAY === #}
                    <p class="mb-0 text-muted fs-6">
                        {{ offre.dateDepart|date('H:i') }}
                        {% if offre.parcour.time %}(Approx. {{ offre.parcour.time }} min duration){% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>

    {# Route Details #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-auto text-center text-info">
                    <i class="fas fa-route fa-2x"></i>
                </div>
                <div class="col">
                    <h5 class="mb-1">Route Details</h5>
                    {# === UPDATED DISTANCE DISPLAY === #}
                    <p class="mb-0">
                        Distance: {{ offre.parcour.distance ? (offre.parcour.distance|number_format(1, '.', ',')) ~ ' km' : 'Not specified' }}
                    </p>
                    {# TODO: Add Map Display Here Later #}
                    {# <div id="route-map-display" style="height: 250px; margin-top: 15px; border-radius: 4px;"></div> #}
                </div>
            </div>
        </div>
    </div>

    {# Car & Ride Details #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-auto text-center text-success">
                    <i class="fas fa-car fa-2x"></i>
                </div>
                <div class="col">
                    <h5 class="mb-1">Ride Details</h5>
                    <ul class="list-unstyled mb-0 text-muted">
                        <li><i class="fas fa-gas-pump fa-fw me-1"></i> Fuel: {{ offre.typeFuel|capitalize }}</li>
                        <li><i class="fas fa-wind fa-fw me-1"></i> Air Conditioned: {{ offre.climatisee ? 'Yes' : 'No' }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    </div>{# End Main Column #}

    {# Sidebar Column (Photo, Price, Booking) #}
    <div class="col-lg-4">
    {# Photo #}
    <div class="card shadow-sm mb-4">
        {% if offre.photo %}
            {# Ensure 'public_offer_large' LiipImagine filter exists #}
            <img src="{{ vich_uploader_asset(offre, 'photoFile') | imagine_filter('public_offer_large') }}"
                    {# === UPDATED ALT TEXT === #}
                 alt="Photo for {{ offre.parcour.name|default(offre.parcour.pickup ~ ' to ' ~ offre.parcour.destination) }}" class="card-img-top img-fluid">
        {% else %}
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="min-height: 250px;">
                <i class="fas fa-image fa-4x text-body-tertiary"></i>
            </div>
        {% endif %}
    </div>

    {# Price and Booking Box #}
    <div class="card shadow-sm sticky-lg-top" style="top: 80px;">
        <div class="card-body text-center">
            <h4 class="mb-3 text-primary">Price per Seat</h4>
            <p class="display-6 fw-bold mb-3">{{ offre.prix|number_format(2, '.', ',') }} <span class="fs-4 text-muted">TND</span></p>

            <p class="mb-3">
                          <span class="badge rounded-pill fs-6 {% if offre.getRemainingPlaces() > 2 %}bg-success{% elseif offre.getRemainingPlaces() > 0 %}bg-warning{% else %}bg-danger{% endif %}">
                              {{ offre.getRemainingPlaces() }} seat(s) left
                          </span>
                out of {{ offre.nombrePlaces }}
            </p>
            <hr>
            {# Reservation Button Logic (Assuming unchanged, ensure it uses correct reservation logic/routes) #}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% set can_reserve = true %}
                {% if app.user == offre.conducteur %}{% set can_reserve = false %}{% endif %}
                {% set already_reserved = false %}
                {% for reservation in offre.reservations %}
                    {% if reservation.passenger == app.user and reservation.status == 'confirmed' %}
                        {% set already_reserved = true %}
                    {% endif %}
                {% endfor %}

                {% if already_reserved %}
                    <div class="alert alert-success"><i class="fas fa-check"></i> Seat Reserved!</div>
                {% elseif not can_reserve %}
                    <div class="alert alert-info">This is your offer.</div>
                {% elseif offre.getRemainingPlaces() <= 0 %}
                    <button class="btn btn-secondary btn-lg w-100" disabled><i class="fas fa-times-circle"></i> Fully Booked</button>
                {% else %}
                    {# Ensure 'app_reservation_create' route exists and handles reservation #}
                    <form method="post" action="{{ path('app_reservation_create', {'idOffre': offre.idOffre}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('reserve' ~ offre.idOffre) }}">
                        <button type="submit" class="btn btn-primary btn-lg w-100"><i class="fas fa-check-circle"></i> Reserve My Seat</button>
                    </form>
                {% endif %}
            {% else %}
                <p class="mb-1"><small>You need an account to reserve.</small></p>
                {# Ensure login/register routes redirect correctly #}
                <a href="{{ path('app_login', {'redirect_to': app.request.attributes.get('_route'), 'redirect_params': {'idOffre': offre.idOffre}}) }}" class="btn btn-outline-primary w-100 mb-2">Login</a>
                <a href="{{ path('app_register') }}" class="btn btn-outline-secondary w-100">Register</a>
            {% endif %}
            {# End Reservation Button Logic #}
        </div>
    </div>
    </div>{# End Sidebar Column #}
    </div>{# End Row #}
    </div>{# End Container #}
{% endblock %}